{
    "name": "james/itsgoingtobe",
    "license": "proprietary",
    "type": "project",
    "description": "It's Going To Be Backend API",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.3",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "doctrine/orm": "^2.5",
        "lexik/jwt-authentication-bundle": "^2.4",
        "symfony/apache-pack": "^1.0",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/monolog-bundle": "^3.1.0",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/security-bundle": "^4.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/var-dumper": "^4.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "symfony/dotenv": "^4.0",
        "codacy/coverage": "^1.1",
        "codeception/codeception": "2.3.*",
        "flow/jsonpath": "^0.3.4",
        "overtrue/phplint": "^1.1.2",
        "phpunit/phpunit": "~5.5",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/phpunit-bridge": "^4.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "@generate-rsa"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "generate-rsa": [
            "openssl genrsa -aes256 -passout pass:JWT_PASSPHRASE -out config/jwt/private.pem 4096",
            "openssl rsa -pubout -in config/jwt/private.pem -passin pass:JWT_PASSPHRASE -out config/jwt/public.pem"
        ],
        "compile": [
            "php bin/console doctrine:migrations:migrate --no-interaction"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        }
    }
}
