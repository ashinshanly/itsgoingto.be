<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block meta %}{% endblock %}
        <meta name="description" content="Wondering where to go or what to see? Start a vote and share it with your friends or colleagues.">
        <meta name="keywords" content="question vote poll result">

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@sproogen" />
        <meta name="twitter:title" content="It's Going To Be" />
        <meta name="twitter:description" content="{% block description %}Wondering where to go or what to see? Start a vote and share it with your friends or colleagues.{% endblock %}" />
        <meta name="twitter:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset('/images/itsgoingtobe-logo.png') }}" />

        <meta name="og:url" content="{{ app.request.uri }}" />
        <meta name="og:title" content="It's Going To Be" />
        <meta name="og:description" content="{% block ogdescription %}Wondering where to go or what to see? Start a vote and share it with your friends or colleagues.{% endblock %}" />
        <meta name="og:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset('/images/itsgoingtobe-logo.png') }}" />

        <title>{% block title %}It's Going To Be{% endblock %}</title>

        <link href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,500,500italic,400italic,300italic,100italic,700italic' rel='stylesheet' type='text/css'>

        <!--[if lt IE 9]>
            <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.js"></script>
        <![endif]-->

        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">

        <link rel="stylesheet" href="//code.jquery.com/ui/1.10.1/themes/smoothness/jquery-ui.css">

        {% if app.debug %}
            <link rel="stylesheet" href="{{ asset('/css/itsgoingtobe.css') }}">
        {% else %}
            <link rel="stylesheet" href="{{ asset('/css/itsgoingtobe.min.css') }}">
        {% endif %}

        <link rel="icon"
          type="image/png"
          href="{{ asset('favicon.png') }}">
    </head>
    <body>
        {% if app.user %}
            <a href="{{ path('logout') }}" class="btn btn-logout">Logout</a>
        {% endif %}

        {% block body %}{% endblock %}

        <div class="footer-container">
            <div class="footer">
                <span class="contact"><a href="mailto:itsgoingtobe@jwgmedia.co.uk" target="_top">itsgoingtobe@jwgmedia.co.uk</a></span>

                <span class="jwg_logo"><a href="http://jwgmedia.co.uk" target="_blank"><img height="50" src="{{ asset('/images/jwgmedia.png') }}"></a></span>
            </div>
        </div>

        <script src="//code.jquery.com/jquery-2.1.0.min.js"></script>

        {% block javascripts %}{% endblock %}

        {% if app.debug %}
            <script src="{{ asset('/js/itsgoingtobe.js') }}"></script>
        {% else %}
            <script src="{{ asset('/js/itsgoingtobe.min.js') }}"></script>
        {% endif %}

        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-41673510-5', 'auto');
          ga('send', 'pageview');
        </script>
    </body>
</html>
